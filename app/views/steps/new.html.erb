<h1>おすすめの書籍を紹介！</h1>
<h3>書籍を登録する！</h3>
<%= form_for @step, url: steps_path do |f| %>
<div class="field">
  <%= f.label :書名を入力 %> <br>
  <%= f.text_field :book, class: "form-control" %>
  <br>
   <%= f.label :ジャンル %> <br><%= f.select :tipe_second , [["株式", "株式"], ["投資信託", "投資信託"], ["不動産", "不動産"], ["その他", "その他"]], include_blank: "ジャンル選択" %>
  <br>
  <%= f.label :閲覧または読んだ感想 %> <br><%= f.text_area :body_second, :size => 140 %>
  <br>
</div>
<%= f.submit "記録する" %> <% end %> <%= link_to "トップページに戻る", steps_path
%>

<style>
.form-control{
    width: 20%;
}

</style>